@model List<InfocusCase.Entity.Concrete.Task>


<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.css" rel="stylesheet" />
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />

</head>

<body>
    <div class="content d-flex flex-column">
        <div class="col-md-6 m-auto">
            <div class="card">
                <div class="card-header">
                    <h5 class="title">Add Task</h5>
                </div>
                <div class="card-body">
                    <form class="w-500" asp-action="TaskPage" asp-controller="home" method="post">

                        <input type="hidden" name="Id"  />
                        <div class="mb-3">
                            <label for="FirstName" class="form-label">Name</label>
                            <input type="text" id="NameId" name="Name" class="form-control"/>

                        </div>

                        <div class="mb-3">
                            <label for="LastName" class="form-label">Description</label>
                            <input type="text" id="DescriptionId" name="Description" class="form-control" />

                        </div>

                        <div class="mb-3">
                            <label for="DateOfBirth" class="form-label">Deadline</label>
                            <input type="text" class="form-control" name="Deadline" id="DeadlineId" />
                        </div>

                        <button type="submit" (click)="add()" class="btn btn-primary w-100">Save</button>

                    </form>
                </div>
            </div>

        </div>
        <div class="p-5">
            <table id="customertable" class="table p-5">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Deadline</th>
                        <th>Assign And Update</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        <td> @item.Deadline.ToString("dd/M/yyyy")</td>
                        <td> @Html.ActionLink("Assign And Update", "AssignTask", new { id = item.Id }, new { @class = "btn btn-light" })</td>
                        @*<td> @Html.ActionLink("Update", "UpdateTask", new { }, new { @class = "btn btn-primary" })</td>*@
                        <td> @Html.ActionLink("Delete", "DeleteTask", new { }, new { @class = "btn btn-danger" })</td>

                    </tr>
                    }



                </tbody>

            </table>
        </div>

    </div>

</body>

</html>
<script>
    $("#DeadlineId").datepicker({
        format: "yyyy-mm-dd"
    });
</script>