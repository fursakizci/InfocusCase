@model List<InfocusCase.Entity.Concrete.Person>


<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
</head>

<body>
    <div class="content d-flex flex-column">
        <div class="col-md-6 m-auto">
            <div class="card">
                <div class="card-header">
                    <h5 class="title">Add Person</h5>
                </div>
                <div class="card-body">
                    <form class="w-500" asp-action="index" asp-controller="home" method="post">

                        <div class="mb-3">
                            <label for="FirstName" class="form-label">FirstName</label>
                            <input type="text" id="FirstName" name="FirstName" class="form-control">

                        </div>

                        <div class="mb-3">
                            <label for="LastName" class="form-label">LastName</label>
                            <input type="text" id="LastName" name="LastName" class="form-control">

                        </div>

                        <div class="mb-3">
                            <label for="DateOfBirth" class="form-label">Date</label>
                            <input type="text" class="form-control" name="BirthDate" id="DateOfBirth">
                        </div>

                        <div class="text-center">
                            <div class="form-check form-check-inline">
                                <input checked="checked" class="form-check-input" type="radio" name="Gender" id="male" value="male">
                                <label class="form-check-label" for="male">Male</label>
                            </div>
                            <div class="form-check form-check-inline ">
                                <input class="form-check-input" type="radio" name="Gender" id="female" value="female">
                                <label class="form-check-label" for="female">Female</label>
                            </div>
                        </div>

                        <button type="submit" (click)="add()" class="btn btn-primary w-100">Save</button>

                    </form>
                </div>
            </div>

        </div>
        <div class="p-5 ">
            <div class="col-md-12 mb-4 ">
                @Html.ActionLink("Add Task", "TaskPage", new {}, new { @class = "text-uppercase btn pull-right btn-info" })
            </div>
            <table id="customertable" class="table p-5">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Birth Date</th>
                        <th>Gender</th>
                        <th>Address</th>
                        <th>Task</th>
                        <th>Update</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.BirthDate.ToString("dd/MM/yyyy")</td>
                            <td>@item.Gender</td>
                            <td>@Html.ActionLink("Addresses", "AddressPage", new { id=item.Id }, new { @class = "btn btn-success" })</td>
                            <td>@Html.ActionLink("Tasks", "ShowPersonTaskList", new { id = item.Id }, new { @class = "btn btn-warning" })</td>
                            <td>@Html.ActionLink("Update", "", new { }, new { @class = "btn btn-primary" })</td>
                            <td>@Html.ActionLink("Delete", "", new { }, new { @class = "btn btn-danger" })</td>

                        </tr>
                    }
                
                </tbody>

            </table>
        </div>

    </div>
    <script>
        $("#DateOfBirth").datepicker({
            format: "yyyy-mm-dd"
        });
    </script>


</body>

</html>